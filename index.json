{
    "name": "Hello World",
    "description": "Just a chart",
    "id": "com.sap.sample-echart",
    "newInstancePrefix": "Costum Widget",
    "version": "0.0.1",

     "webcomponents": [
	{
	    "kind": "main",
	    "tag": "com.sap.sample-echart",
            "url": "/https://github.com/datobser/bootcamp/blob/main/chart",
            "integrity": "",
            "ignoreIntegrity" : true
        }
    ],
    "properties": {
	"data": {
	    
	    "type": "number",
	    "description": "Data for chart"
	    
	},
        "color": {
	    "type": "string",
            "description": "Background color",
            "default": "red"
        },
        "opacity": {
            "type": "number",
            "description": "Opacity",
            "default": 1
        },
        "width": {
            "type": "integer",
            "default": 100
        },
        "height": {
            "type": "integer",
            "default": 100
        }
    },
    
    "methods": {
        "setColor": {
            "description": "Sets the background color.",
            "parameters": [
                {
                    "name": "newColor",
                    "type": "string",
                    "description": "The new background color"
                }
            ],
            "body": "this.color = newColor;"
        },
        "getColor": {
            "returnType": "string",
            "description": "Returns the background color.",
            "body": "return this.color;"
        }
    },
    
    "events": {
        "onClick": {
            "description": "Called when the user clicks the Colored Box."
        }
    }
}
